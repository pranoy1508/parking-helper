<h1 class="commanHeading">Configure User Details :<b>
    </b></h1>
<div class="d-flex justify-content-between">
    <div class="d-flex" style="flex-direction: row-reverse;">
        <button type="button" style="float: right;" onclick="addUser()" class="btn btn-success d-none" name="btnAddUser"><i
                class="fa fa-solid fa-plus"></i> Add User</button>&nbsp;
        <button type="button" style="float: right;" class="btn btn-primary" data-toggle="modal"
            data-target="#exampleModal"><i class="fa-solid fa fa-file-arrow-up"></i> Import Users</button>&nbsp;
        <button type="button" style="float: right;" class="btn btn-info" onclick="exportUserDetails()"><i class="fa-solid fa-file-arrow-down"></i>
            Export Users List</button>
    </div>
</div>
<br />
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Select Excel File
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="file" id="input" name="input" />
            </div>
            <div class="modal-footer">
                <a href="/sample.xlsx" class="btn btn-primary">
                    Sample Download
                </a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    Close
                </button>
                <button type="button" class="btn btn-primary addItemExcel" onclick="addUserFromExcel()">
                    Add
                </button>
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="body table-responsive">
        <table id="user_tbl" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Sl. No.</th>
                    <th>UserName</th>
                    <th>Password</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                <% if(items.userDetails.length===0) { %>
                    <p>No users found !</p>
                    <% } else {let i=1 ; items.userDetails.forEach(function(user){ if(i<=5){ %>
                        <tr>
                            <td>
                                <%= i %>
                            </td>
                            <td><input type="text" class="form-control" value="<%= user.userName %>" name="userName"
                                    placeholder="User Name" readonly /></td>
                            <td><input type="text" class="form-control" value="<%= user.userPassword %>" name="password"
                                    placeholder="Password" readonly /></td>
                            <td><input type="text" class="form-control" value="<%= user.userRole %>" name="Role"
                                    placeholder="User Role" readonly /></td>

                        </tr>
                        <% i++; }}); } %>
            </tbody>
        </table>
        <br><br>
        <div class="container d-none" name="div_add_user">
            <h5>Addition of User : </h5>
            <br>
            <table id="user_add_tbl" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <th>UserName</th>
                    <th>Password</th>
                    <th>Role</th>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <input type="email" class="form-control" name="add_userName"
                                placeholder="Enter the user Name">
                        </td>
                        <td>
                            <input type="text" class="form-control" name="password"
                                placeholder="Password will be auto-generated" readonly>
                        </td>
                        <td>
                            <select class="form-select form-control" name="add_user_role"
                                aria-label="Default select example">
                                <option value="USER">User</option>
                                <option value="SUPPORT">Support</option>
                                <option value="ADMIN">Admin</option>
                            </select>
                        </td>
                    </tr>
                </tbody>
            </table>
            <button type="button" onclick="saveUser()" class="btn btn-primary" name="btnSaveUser">Save</button>
            <button type="button" onclick="cancelUserAddition()" class="btn btn-danger" style="float: right;"
                name="btnCancelUserAddition">Cancel</button>
        </div>
    </div>
</div>