<br />
<br />
<div class="card">
    <div class="body table-responsive">
        <div class="container">
            <div class="row">
                <h5>
                    Your Booked Reservations Requests (Top 5) :
                </h5>
            </div>

            <div class="row">
                <div class="input-group mb-4"><input type="search" placeholder="Search here with Reservation Id...."
                        aria-describedby="button-addon5" class="form-control">
                    <div class="input-group-append">
                        <button id="button-addon5" type="button" onclick="getReservationDetails()" class="btn btn-primary"> <i class="fa fa-search"> </i>
                        </button>
                    </div>
                </div>
            </div>
            <br>
            <table class="table table-striped table-bordered" id="tbl_reservations" style="width:100%">
                <%- include('_requestViewPartial.ejs') %>
            </table>
            <br />
            <h5 class="text-success">Parking Reservation Form : </h5>
            <table id="parking_info_tbl_res" class="table table-striped table-bordered" style="width:100%">
                <tbody>
                    <tr>
                        <th style="font-size: 20px;" class="text-primary">Select LTIMindtree Location : </th>
                        <th><select class="form-select form-control" id="location_ddl_res"
                                aria-label="Default select example"
                                onchange="locationSelectionUpdatedForRes(this,'<%= JSON.stringify(items.officeData)  %>')">
                                <% items.officeData.forEach(function (location) { %>
                                    <option value='<%= location.OfficeLocation %>'>
                                        <%= location.OfficeLocation %>
                                    </option>
                                    <%})%>
                            </select></th>
                    </tr>
                    <tr>
                        <td style="font-size: 20px;font-weight: bold;" class="text-primary">Select Parking Location :
                        </td>
                        <td><select class="form-select form-control" id="parking_location_ddl_res"
                                aria-label="Default select example"
                                onchange="parkingSelectionChangedForRes(this,'<%= JSON.stringify(items.officeData)  %>')">
                                <% items.officeData[0].ParkingLocations.forEach(function (parking) { %>
                                    <option value='<%= parking.LocationId %>'>
                                        <%= parking.LocationName %>
                                    </option>
                                    <%})%>
                            </select></td>
                    </tr>
                </tbody>
            </table>
            <table id="reservations_add_tbl" class="table table-striped table-bordered" style="width:100%">
                <tbody>
                    <thead style="font-weight: bold;">
                        <td>Date</td>
                        <td>Name</td>
                        <td>Vehicle Count</td>
                        <td>Vehicle Type</td>
                        <td>Action</td>
                    </thead>
                    <tr>
                        <td>
                            <input type='date' class="form-control" id="res_date" placeholder="Select the date." />
                        </td>
                        <td>
                            <input type="text" class="form-control" id="res_empName" placeholder="Enter the Name">
                        </td>
                        <td>
                            <input type="Number" class="form-control" id="res_vehicleCount" min=1 value=1 disabled>
                        </td>
                        <td>
                            <select class="form-select form-control" id="res_vehicleType"
                                aria-label="Default select example">
                                <option value=0 selected>2Wheeler</option>
                                <option value=1>4Wheeler</option>
                            </select>
                        </td>
                        <td>
                            <button type="button" onclick="submitReservationRequest()" id="btnResSubmit"
                                class="btn btn-primary">Reserve</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>