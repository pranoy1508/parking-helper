<br />
<div class="card">
    <div class="body table-responsive">
        <div class="container">
            <h5>
                Your Reservations Requests (Top 5) :
            </h5>
            <table class="table table-striped table-bordered" style="width:100%">
                <thead style="font-weight: bold;">
                    <td>Reservation Date</td>
                    <td>Office Location</td>
                    <td>Parking Location</td>
                    <td>Vehicle Count</td>
                    <td>Vehicle Type</td>
                    <td>Status</td>
                </thead>
                <tbody>
                    <% if(items.reservations && items.reservations.length>0){ items.reservations.forEach(function
                        (res){ %>
                        <tr>
                            <td>
                                <%= res.reservationDate %>
                            </td>
                            <td>
                                <%= res.officeLocation %>
                            </td>
                            <td>
                                <%= res.parkingLocation %>
                            </td>
                            <td>
                                <%= res.vehicleCount %>
                            </td>
                            <td>
                                <%= res.vehicleType==0 ? "2Wheeler" : "4Wheeler" %>
                            </td>
                            <td>
                                <% if(res.status=="PENDING" ){%>
                                    <span class="text-warning font-weight-bold">
                                        <%= res.status %>
                                    </span>
                                    <% }else {%>
                                        <span class="text-success font-weight-bold">
                                            <%= res.status %>
                                        </span>
                                        <%} %>
                            </td>
                        </tr>
                        <%})} else { %>
                            <h5 style="color: brown;"> No reservation requests found.</h5>
                            <% } %>
                </tbody>
            </table>
            <br />
            <h5 class="text-success">Parking Reservation Form : </h5>
            <table id="parking_info_tbl_res" class="table table-striped table-bordered" style="width:100%">
                <tbody>
                    <tr>
                        <th style="font-size: 20px;" class="text-primary">Select LTIMindtree Location : </th>
                        <th><select class="form-select form-control" id="location_ddl_res"
                                aria-label="Default select example"
                                onchange="locationSelectionUpdatedForRes(this,'<%= JSON.stringify(items.officeDetails)  %>')">
                                <% items.officeDetails.forEach(function (location) { %>
                                    <option value='<%= location.OfficeLocation %>'>
                                        <%= location.OfficeLocation %>
                                    </option>
                                    <%})%>
                            </select></th>
                    </tr>
                    <tr>
                        <td style="font-size: 20px;font-weight: bold;" class="text-primary">Select Parking Location :
                        </td>
                        <td><select class="form-select form-control" id="parking_location_ddl_res"
                                aria-label="Default select example"
                                onchange="parkingSelectionChangedForRes(this,'<%= JSON.stringify(items.officeDetails)  %>')">
                                <% items.officeDetails[0].ParkingLocations.forEach(function (parking) { %>
                                    <option value='<%= parking.LocationId %>'>
                                        <%= parking.LocationName %>
                                    </option>
                                    <%})%>
                            </select></td>
                    </tr>
                </tbody>
            </table>
            <table id="reservations_add_tbl" class="table table-striped table-bordered" style="width:100%">
                <tbody>
                    <thead style="font-weight: bold;">
                        <td>Date</td>
                        <td>Name</td>
                        <td>Vehicle Count</td>
                        <td>Vehicle Type</td>
                        <td>Action</td>
                    </thead>
                    <tr>
                        <td>
                            <input type='date' class="form-control" id="res_date" placeholder="Select the date." />
                        </td>
                        <td>
                            <input type="text" class="form-control" id="res_empName" placeholder="Enter the Name">
                        </td>
                        <td>
                            <input type="Number" class="form-control" id="res_vehicleCount" min=1 value=1>
                        </td>
                        <td>
                            <select class="form-select form-control" id="res_vehicleType"
                                aria-label="Default select example">
                                <option value=0 selected>2Wheeler</option>
                                <option value=1>4Wheeler</option>
                            </select>
                        </td>
                        <td>
                            <button type="button" onclick="submitReservationRequest()" id="btnResSubmit"
                                class="btn btn-primary">Submit</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>